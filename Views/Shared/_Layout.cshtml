<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LOTA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebLota.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <header>

        <div class="logo">
            <h1>LOTA</h1>
        </div>
        <nav>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li><a asp-area="" asp-controller="Store" asp-action="Store">Tienda</a></li>
                <li><a asp-area="" asp-controller="Clientes" asp-action="Create">Contacto</a></li>
            </ul>
        </nav>

        <div class="social-icons">
            <a href="https://www.instagram.com/bolsoslota/">
                <img src="~/Images/Ig.png" alt="Instagram">
            </a>
            @*   <a href="mailto:bolsoslota@gmail.com">
            <img src="~/Images/Mail.png" alt="Email">
            </a> *@
            <a href="tel:+660877083">
                <img src="~/Images/Whatssup.png" alt="WhatsApp">
            </a>
            <a asp-controller="Carrito" asp-action="Index" class="carrito">
                <img src="~/Images/cesta.png" alt="Carrito" class="carrito">
                <span id="carrito-count" class="badge bg-danger">0</span>
            </a>
            @* <a asp-area="" asp-controller="Carrito" asp-action="Index">
            <img src="~/Images/cesta.png" alt="Carrito" class="carrito">
            </a> *@
        </div>


    </header>

    <!-- Main Content -->
    <main class="container-fluid">
        @RenderBody()
    </main>

    <!--SECCIÓN FOOTER-->
    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <h3>INFO</h3>
                <ul>
                    <li><a href="#">Conócenos</a></li>
                    <li><a href="#">Cambios y devoluciones</a></li>
                    <li><a href="#">Cómo cuido mi Lota</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>CONTACTO</h3>
                <ul>
                    <li><a href="mailto:bolsoslota@gmail.com">Email</a></li>
                    <li><a asp-controller="Clientes" asp-action="Create">Formulario de contacto</a></li>

                </ul>
            </div>
            <div class="footer-section">
                <h3>LEGAL</h3>
                <ul>
                    <li><a href="#">Términos y Condiciones</a></li>
                    <li><a href="#">Política de Privacidad</a></li>
                    <li><a href="#">Cookies</a></li>
                </ul>
            </div>
        </div>

        <!-- Pie de página -->
        <div class="footer-bottom">
            <p>© 2024 LOTA. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
